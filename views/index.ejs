<!DOCTYPE html>
<html lang="pt-br">
<head>
  <link rel="stylesheet" href="/style.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Livro</title>
</head>
<body>
  <h1>Pesquisar Livro</h1>
  <hr>
  <form id="formulario">
    <label id="Titulo" for="inp_titulo">Título: </label><br>
    <input type="text" id="inp_titulo" placeholder="Ex.: Livro A">
    <input type="radio" name="escolha_livro" id="escolha_livro_titulo" value="titulo" checked>
    <br><br>
    <label id="Ano" for="inp_ano">Ano: </label><br>
    <input type="text" id="inp_ano" placeholder="Ex.: 2014" disabled>
    <input type="radio" name="escolha_livro" id="escolha_livro_ano" value="ano">
    <br><br>
    <input type="submit" value="Pesquisar">
  </form>

  <h2>Lista</h2>
  <hr>

  <% if (lista.length === 0) { %>
    <p class="error">Livro não encontrado</p>
  <% } else { %>
    <div class="lista">
      <div class="tr">
        <div class="td cabecalho">ID</div>
        <div class="td cabecalho">Ano</div>
        <div class="td cabecalho">Titulo</div>
        <div class="td cabecalho">Autor</div>
      </div>

      <% for (let i = 0; i < lista.length; i++) { %>
        <div class="tr">
          <div class="td"><%= lista[i].id %></div>
          <div class="td"><%= lista[i].ano %></div>
          <div class="td"><%= lista[i].titulo %></div>
          <div class="td"><%= lista[i].autor %></div>
        </div>
      <% } %>
    </div>
  <% } %>

  <script src="/script.js"></script>
</body>
</html>